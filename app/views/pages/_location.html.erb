<section id="location" class="container">
    <div class="page-header">
        <h1 class="text-center">¿Cómo llegar?</h1>
    </div>

    <div class="row">
      <div id="map" class="col-md-8"></div>
      <div id="locationtextdiv" class="col-md-4">
      <h1 id="locationtext">
        Estamos ubicados en la
        Núñez de Cáceres, en calle Eugenio D Camps casi esq. Olof Palmer, Plaza
        MLC no. 61

      </h1></div>
    </div>
    <script type="text/javascript">

    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(<%= raw @zoom %>);
    });

    </script>
</section>
